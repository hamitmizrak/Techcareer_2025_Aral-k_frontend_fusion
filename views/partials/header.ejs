<!-- html5 standartına göre -->
<!DOCTYPE html>
<html lang="tr">
  <head>
    <title>Title</title>
    <!-- karakter kdolaması ve tasarım için -->
    <meta charset="utf-8" />

    <!-- Responsive design -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- EJS title -->
    <title><%= title %> | Frontend Fusion</title>

    <!-- Bootstrap CSS v5.2.1 -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />

    <!-- Toastify CSS -->
    <link rel="stylesheet" href="/vendor/toastify/toastify.css" />

    <!-- external css -->
    <link rel="stylesheet" href="/css/style.css" />

    <!-- Toast Script -->
    <script>
      window.toastMessage =  JSON.stringify(toast || {}) ;
    </script>
  </head>

  <body>
    <noscript>your browser, this is side not working</noscript>
    <!-- start codes -->

    <!-- start nav -->
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top mb-5">
      <div class="container">
        <a class="navbar-brand" href="/">EJS Logo</a>

        <!-- Toggler button -->
        <button
          class="navbar-toggler d-md-none"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#collapsibleNavId"
          aria-controls="collapsibleNavId"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <!-- navbar menü -->
        <div id="collapsibleNavId" class="collapse navbar-collapse">
          <!-- LEFT -->
          <ul class="navbar_left_class navbar-nav me-auto mt-2 mt-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="#">Hakkımızda</a>
            </li>
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                id="dropdownId"
                data-bs-toggle="dropdown"
                aria-haspopup="true"
                aria-expanded="false"
              >
                Blog
              </a>
              <div class="dropdown-menu" aria-labelledby="dropdownId">
                <a class="dropdown-item" href="#">Action 1</a>
                <a class="dropdown-item" href="#">Action 2</a>
              </div>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link" href="#">İletişim</a>
            </li>
          </ul>

          <!-- CENTER -->
          <form id="navbar_center_class" class="d-flex my-2 my-lg-0">
            <input class="form-control me-sm-2" type="text" placeholder="Search" />
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
          </form>

          <!-- RIGHT -->
          <!-- LOGIN REGISTER DASHBOARD -->
          <ul id="navbar_right_class" class="navbar-nav me-auto mt-2 mt-lg-0">
            <!-- Bu blok kullanıcı login değilse gösterilecek menü (public) -->
            <% if (!currentUserEmail) {%>
            <li class="nav-item">
              <a class="nav-link" href="/register" aria-current="page">Kayıt Ol</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/login" aria-current="page">Giriş Yap</a>
            </li>
            <% } else { %>
            <!-- Bu blok kullanıcı login ise gösterilecek menü (private) -->
            <li class="nav-item">
              <a class="nav-link" href="/admin_page" aria-current="page">Admin Paneli</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout" aria-current="page">Çıkış Yap</a>
            </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>
    <!-- end nav -->

    <!-- start container -->
    <div class="container mt-5 pt-5"></div>
  </body>
</html>
