<!-- html5 standartına göre -->
<!DOCTYPE html>
<html lang="tr">
  <head>
    <!-- karakter kdolaması ve tasarım için -->
    <meta charset="UTF-8" />

    <!-- Responsive design -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- EJS title -->
    <title><%= title %> | Frontend Fusion</title>

    <!-- Bootstrap CSS v5.2.1 -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />

    <!-- Toastify CSS -->
    <link rel="stylesheet" href="/vendor/toastify/toastify.css" />

    <!-- external css -->
    <link rel="stylesheet" href="/css/style.css" />

    <!-- Toast Script -->
    <script>
      window.toastMessage =  <%- JSON.stringify(toast || null) %>;
      window.afterRegister =  <%- JSON.stringify(afterRegister || null) %>;
      window.afterLogin =  <%- JSON.stringify(afterLogin || null) %>;
    </script>
  </head>

  <body>
    <noscript>your browser, this is side not working</noscript>
    <!-- start codes -->

    <!-- NAVBAR (views/partials/navbar.ejs)) -->
    <%- include("partials/navbar") %>
    <!-- NAVBAR end-->

    <!-- CONTENT -->
    <div class="container mt-5 mb-1 pt-5"><%- body %></div>
    <!-- CONTENT end -->

    <!-- FOOTER (views/partials/footer.ejs)  -->
    <%- include("partials/main") %>
    <!-- FOOTER end -->

    <!-- FOOTER (views/partials/footer.ejs)  -->
    <%- include("partials/footer") %>
    <!-- FOOTER end -->

    <!-- Bootstrap JavaScript Libraries -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
      crossorigin="anonymous"
    ></script>

    <!-- EXTERNAL -->
    <!-- Toastify JS -->
    <script src="/vendor/toastify/toastify.js"></script>

    <!-- Custom JS -->
    <script src="/js/app.js"></script>
  </body>
</html>
